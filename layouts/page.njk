{% extends "base.njk" %}
{% block head -%}
{%- if data.includeMeLinks -%}
<link rel="me" href="https://bsky.app/profile/janmr.com">
<link rel="me" href="https://github.com/janmarthedal">
<link rel="me" href="https://www.linkedin.com/in/janmr">
<link rel="me" href="https://mathstodon.xyz/@janmr">
<link rel="me" href="https://x.com/janmarthedal">
{% endif -%}
{%- if useKaTeX -%}
<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/katex@0.16.7/dist/katex.min.css">
{% endif -%}
{%- if usePrism -%}
<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/prismjs@1.20.0/themes/prism.css">
{% endif -%}
<link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
{%- endblock %}
{% block content -%}
<header>
  <img src="/media/janmr-logo.svg">
</header>
<main>
  <div class="content">
    <div class="main">
      {% if title -%}
      <h1>{{ title }}</h1>
      {%- endif %}
      {{ content | safe }}
    </div>
    <div class="sidebar">
      <p>
        <a href="/">
          <span class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 32 32">
