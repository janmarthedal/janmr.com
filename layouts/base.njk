<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>{{ metadata.title }}{% if title %} | {{ title }}{% endif %}</title>
    <link rel="icon" type="image/png" sizes="16x16" href="/icon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/icon-32x32.png">
    <link rel="icon" type="image/png" sizes="48x48" href="/icon-48x48.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/icon-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/icon-512x512.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/svg+xml" href="/icon.svg">
    <link rel="canonical" href="{{ url | url | absoluteUrl(metadata.url) }}">
    <link rel="alternate" href="{{ metadata.feed.url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <meta property="og:site_name" content="{{ metadata.title }}">
    <meta property="og:type" content="{{ og.type }}">
    <meta property="og:url" content="{{ url | url | absoluteUrl(metadata.url) }}">
    {%- if og.title %}
    <meta property="og:title" content="{{ og.title }}">
    {%- endif -%}
    {%- if og.description %}
    <meta property="og:description" content="{{ og.description }}">
    {%- endif -%}
    {%- if og.image %}
    <meta property="og:image" content="{{ og.image | absoluteUrl(metadata.url) }}">
    {%- endif %}
    {% block head -%}
    {%- endblock %}
  </head>
  <body>
    {% block content -%}
    {{ content | safe }}
    {%- endblock %}
    {% block bodyend -%}
    {%- if metadata.environment == "production" -%}
    <script data-goatcounter="https://janmr.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
    {%- endif -%}
    {%- endblock %}
  </body>
</html>
