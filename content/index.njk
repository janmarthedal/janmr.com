---
title: janmr.com
layout: page
---
<h1>janmr.com</h1>

<ul class="update-list">
  {%- for update in collections.updates | reverse -%}
  <li>
    <div class="update-header">
      <img class="update-avatar" src="/media/updates/avatar.jpeg" alt="User">
      <div class="update-author">
        <p class="author-name">Jan Marthedal Rasmussen</p>
        <time datetime="{{ update.date | dateToISO }}">{{ update.date | refHtmlDateString }}</time>
      </div>
    </div>
    <div class="update-content">
      {{ update.content | safe }}
    </div>
  </li>
  {%- endfor -%}
</ul>

